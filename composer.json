{
  "name": "h4kuna/workdays",
  "type": "library",
  "homepage": "https://github.com/h4kuna/workdays",
  "keywords": [
    "workdays"
  ],
  "license": [
    "MIT"
  ],
  "authors": [
    {
      "name": "Milan Matějček",
      "email": "milan.matejcek@gmail.com"
    }
  ],
  "require": {
    "php": ">= 8.0",
    "h4kuna/data-type": "^3.0"
  },
  "require-dev": {
    "nette/tester": "^2.4",
    "phpstan/phpstan": "^1.8",
    "phpstan/phpstan-strict-rules": "^1.4",
    "phpstan/phpstan-deprecation-rules": "^1.1.3",
    "tracy/tracy": "^2.9"
  },
  "autoload": {
    "psr-4": {
      "h4kuna\\Workdays\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "h4kuna\\Workdays\\Tests\\": "tests"
    }
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "phpstan": "vendor/bin/phpstan analyse",
    "tests": "vendor/bin/tester -s --colors 1 -s -C tests/Unit",
    "coverage": "vendor/bin/tester --coverage coverage.html --coverage-src src/ -s --colors 1 -s -C tests/Unit"
  }
}
